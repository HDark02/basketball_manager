MDScreen:
    name: "login"
	user_name:user_name
	sign_up_text:sign_up_text
	user_password:user_password
	
	MDFloatLayout:
        pos_hint: {"center_x": .5, "center_y": .5}
        FitImage:
            source: "WaTurc.jpg"
            pos_hint: {"center_x": .5, "center_y": .5}
        MDFloatLayout:
        	# md_bg_color: 0, 0, 0, 0.5
			pos_hint: {"center_x": .5, "center_y": .5}
			MDIconButton:
    			icon: "arrow-left"
				pos_hint: {"center_x": .1, "center_y": .95}
				theme_text_color: "Custom"
				text_color: "white"
				halign: "center"
				font_size: "25sp"
				size_hint: .2, .07
				on_release:
    				root.manager.transition.direction = "right"
					root.manager.current = "welcome"
					
			MDLabel:
				id: title_enter
				text: "Connexion"
				theme_text_color: "Custom"
				text_color: "white"
				pos_hint: {"x": .1, "center_y": .9}
				bold: True
				font_size: "30sp"
			MDLabel:
				id: title_enter
				text: "Accédez à votre compte"
				theme_text_color: "Custom"
				text_color: "white"
				pos_hint: {"x": .1, "center_y": .85}
				font_size: "18sp"
				opacity: .7
			MDFloatLayout:
				md_bg_color: 0, 0, 0, 0.9
				pos_hint: {"center_x": .5, "center_y": .425}
				size_hint: .9, .5
				Input_cart:
					id: user_name
					hint_text: "Email"
					pos_y: .85
				MDIcon:
					icon: "email"
					halign: "right"
					theme_text_color: "Custom"
					text_color: "blue"
					pos_hint: {"right": .9, "center_y": .85}
					on_release:
				Input_cart:
					id: user_password
					hint_text: "Mot de passe"
					pos_y: .65
					password: True
				MDIconButton:
					id: icon_eye
					icon: "eye-off"
					halign: "right"
					theme_text_color: "Custom"
					text_color: "blue"
					pos_hint: {"right": .9, "center_y": .65}
					on_release:
    					self.icon = "eye" if self.icon == "eye-off" else "eye-off" 
    					user_password.password = not user_password.password
				MDRaisedButton:
					id: sign_up_text
					text: "Se connecter"
					pos_hint: {"center_x": .5, "center_y": .35}
					halign: "center"
					font_size: "25sp"
					bold: True
					size_hint: .8, .07
					theme_text_color: "Custom"
					text_color: "white"
					md_bg_color: 1, 0.4, 0.1, 0.8
					on_release: app.data_login_on(user_name.text, user_password.text)
				MDProgressBar:
					pos_hint: {"center_x": .5, "center_y": .17}
					value: 100
					size_hint: .5, None
					halign: "center"
					theme_text_color: "Custom"
					color: "white"
				MDTextButton:
					text: "Pas encore de compte?"
					theme_text_color: "Custom"
					text_color: "white"
					pos_hint: {"center_x": .3, "center_y": .1}
					halign: "center"
					font_size: "15sp"
					on_release: app.login(id=2)
				MDTextButton:
					text: "S'enscrire"
					theme_text_color: "Custom"
					text_color: "orange"
					pos_hint: {"center_x": .72, "center_y": .1}
					halign: "center"
					font_size: "20sp"
					on_release: app.login(id=2)

<Input_cart@MDTextField>:
	# hint_text: "Entrez le montant"
	pos_hint: {"center_x": .5, "center_y": .8}
	font_size: "20sp"
	size_hint: .8, .1
	theme_text_color: "Custom"
	mode: "rectangle"
	multiline: True
	hint_text_color_normal: "white"
	hint_text_color_focus: "white"
	fill_color_normal: 1, 1, 1, 0
	text_color_focus: "white"
	text_color_normal: 1, 1, 1, 0.8
	line_color_focus:  1, 0.4, 0.1, 0.8
	line_color_normal: 1, 1, 1, 0.2
	id: a
	pos_y: .1
	hint_text: ""
	size_hint: .9, None
	height: self.minimum_height
	pos_hint: {"center_x": .5, "center_y": root.pos_y}
	multiline: False
	font_size: "20sp"